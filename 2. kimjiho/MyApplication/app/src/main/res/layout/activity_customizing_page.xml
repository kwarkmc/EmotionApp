<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customizing_page">


    <TextView
        android:id="@+id/side_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="337dp"
        android:background="@drawable/side_bar"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="664dp"
        android:text="back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:text="CUSTOMIZING"
        android:textColor="@color/black"
        android:textSize="15pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/today_music"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/today_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="21dp"
        android:text="오늘 같은날 듣고 싶은 노래"
        android:textColor="@color/black"
        android:textSize="10pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/checkBox_dance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.278"
        app:layout_constraintStart_toEndOf="@+id/side_bar"
        app:layout_constraintTop_toBottomOf="@+id/main_text" />

    <CheckBox
        android:id="@+id/checkBox_pop"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="147dp"
        android:layout_marginEnd="228dp"
        android:layout_marginBottom="552dp"
        android:text="팝송"
        android:textColor="@color/black"
        android:textSize="8pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_dance"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="147dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="554dp"
        android:text="댄스"
        android:textColor="@color/black"
        android:textSize="8pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_ballad"
        android:layout_width="85dp"
        android:layout_height="48dp"
        android:layout_marginStart="305dp"
        android:layout_marginTop="147dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="552dp"
        android:text="발라드"
        android:textColor="@color/black"
        android:textSize="8pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_hiphop"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="199dp"
        android:layout_marginEnd="228dp"
        android:layout_marginBottom="500dp"
        android:text="힙합"
        android:textColor="@color/black"
        android:textSize="8pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_rock"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_marginStart="209dp"
        android:layout_marginTop="191dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="492dp"
        android:text="락"
        android:textColor="@color/black"
        android:textSize="8pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_classic"
        android:layout_width="85dp"
        android:layout_height="48dp"
        android:layout_marginStart="305dp"
        android:layout_marginTop="199dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="500dp"
        android:text="클래식"
        android:textColor="@color/black"
        android:textSize="8pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/today_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="109dp"
        android:layout_marginTop="247dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="450dp"
        android:text="오늘 같은날 듣고 싶은 목소리"
        android:textColor="@color/black"
        android:textSize="10pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_voice_name"
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="298dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="386dp"
        android:hint="이름을 입력해주세요."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_voice_phone"
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="361dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="323dp"
        android:hint="전화번호를 입력해주세요."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/today_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="109dp"
        android:layout_marginTop="425dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="272dp"
        android:text="오늘 같은날 먹고 싶은 음식"
        android:textColor="@color/black"
        android:textSize="10pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_food"
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="476dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="208dp"
        android:hint="음식 이름을 입력해주세요."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="548dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/round_botton"
        android:text="SAVE"
        android:textColor="@color/black"
        android:textSize="25pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>